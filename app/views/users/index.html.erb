<% provide(:title, 'All users') %>
<h1 class="centered">All users</h1>

<!--function to search for user emails using the input typed into the search box-->
<script>
    function searchOnPage() {
        var searchInput = document.getElementById('search').value;
        window.find(searchInput);
        return true;
    }
</script>

<ul class="users">
  <div class="search_feature">
    <form action="" id="form1" onsubmit="return false">
        <div>
            <input size="42" placeholder="Enter name or email address to search" type="text" id="search">
            <input type="submit" id="submit_form" onclick="searchOnPage()" value="Next">
        </div>
    </form>
  </div>

  <%= render @users.order("name ASC") %>
</ul>
