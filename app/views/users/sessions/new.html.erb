<html>
  <head>  
    <link href="https://fonts.googleapis.com/css?family=Libre+Franklin" rel="stylesheet">
  </head>
  
  <body>
    <div class="title">
      <font size="7">Log In</font>
    </div>
    </br>
    <div class="row">
      <div class="col-md-6">
        <font size="5">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-horizontal", style="text-align:left">
                <div class="form-group">
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, placeholder: "Enter email" %>
            </div>
            </br>
            <div class="field">
              <%= f.label :password %><br />
              <%= f.password_field :password, autocomplete: "off", placeholder: "Enter password" %>
            </div>
            <!--<% if devise_mapping.rememberable? -%>-->
            <!--  <div class="field">-->
            <!--    <%= f.check_box :remember_me %>-->
            <!--    <%= f.label :remember_me %>-->
            <!--  </div>-->
            <!--<% end -%>-->
            </br>
             </div>
              </div>
            </font>
            <%= f.submit "Log in", class: "btn btn-primary btn-large"%>
            <% end %>
            
          <!--This thing is the Forgot Password link-->
          <!--<%= render "devise/shared/links" %>-->
      </div>
    </div>
</body>
</html>