<h1>Make a new Profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>
    
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>
      
      <%= f.label :nickname %>
      <%= f.text_field :nickname, class: 'form-control' %>
      
      <%= f.label :landline %>
      <%= f.text_field :landline, class: 'form-control' %>
      
      <%= f.label :cell %>
      <%= f.text_field :cell, class: 'form-control' %>
      
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
      
      <%= f.label :address %>
      <%= f.text_field :address, class: 'form-control' %>
      
      <%= f.label :neighborhood %>
      <%= f.text_field :neighborhood, class: 'form-control' %>
      
      <%= f.label :spouse %>
      <%= f.text_field :spouse, class: 'form-control' %>
      

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>
<div>
  <h3>Import a CSV File</h3>
  <%= form_tag import_profiles_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>
